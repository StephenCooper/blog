    name: "Angular Connect: ngTemplateOutlet: The Secret to Customisation",
    youTubeLink: "https://www.youtube.com/embed/2SnVxPeJdwE?start=43",
  },
  {
    name: "AG Grid at ng-Conf 2022",
    youTubeLink: "https://www.youtube.com/embed/4dhBnvgb5H0?start=83",
  },
  {
    name: "JS Nation: Auto maintaining thousands of code demos across multiple framework variations",
    youTubeLink: "https://www.youtube.com/embed/kOwAjLgSY14?start=41",
  },
  {
    name: "AG Grid Angular Tutorial Playlist",
    youTubeLink:
      "https://www.youtube.com/embed/videoseries?start=83&list=PLsZlhayVgqNw6VHFn4j6FcJM5vLACsf0x",
  },
  {
    name: "Angular Nation: Meet the Team",
    youTubeLink: "https://www.youtube.com/embed/MRy--gvA8kI?start=189",
  },
  {
    name: "Angular Kenya: Is your Component Ready for Strict Mode?",
    youTubeLink: "https://www.youtube.com/embed/5a2YKmVzMBM?start=7",
  },
  {
    name: "Angular Plus Show: AG Grid v28, TypeScript, & Angular",
    src: "https://widget.spreaker.com/player?episode_id=50111025&theme=light&playlist=false&cover_image_url=https%3A%2F%2Fd3wo5wojvuv7l.cloudfront.net%2Fimages.spreaker.com%2Foriginal%2F0271956aa05833cb43519105dd2a9266.jpg",
