---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'About Me';
const description = 'About Stephen';
const permalink = `${Astro.site.href}about`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="about">
  <div class="container">
    <h1>About</h1>
    <figure class="about-image">
      <img src="/assets/profile-pic.webp" alt="Stephen Cooper" width="330">
    </figure>
    <p>
      Hi, I'm <strong>Stephen</strong>. I'm a senior software engineer at <a href="https://www.ag-grid.com" target="_blank">AG Grid</a>.</p>
    <p>I enjoy blogging and speaking at conferences and meet-ups about things that I have built and learnt.</p>
    <p>I also have 4 kids and a dog called Coco! </p>
  </div>
</BaseLayout>

<style>
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 50%;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
