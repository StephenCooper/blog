---
import BlogList from "../components/BlogList.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Stephen's Blog";
const description = "A place to share what I have learnt.";
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h1>Hello I am Stephen!</h1>
      <p>
        I'm a senior software engineer at <a
          href="https://www.ag-grid.com"
          target="_blank">AG Grid</a
        > who enjoys blogging and speaking at conferences.
      </p>
    </div>

    <div class="hero-image-container">
      <picture>
        <source srcset="/assets/profile-pic.webp" media="(min-width: 600px)" />
        <img
          class="hero-image"
          alt="Headshot of Stephen"
          src="/assets/profile-pic.webp"
          width="550"
          height="466"
        />
      </picture>
    </div>
  </div>
  <h2 style="margin: 0;">&#8595; Latest Posts &#8595;</h2>
  <BlogList limit={2} />
  <a class="see-all" href="/blog">See all posts</a>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: 0.8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 350px;
    margin-bottom: 1em;
    border-radius: 50%;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 300px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }

  h2 {
    align-self: center;
  }

  .see-all {
    width: fit-content;
    align-self: center;
    font-weight: bold;
    font-size: x-large;
  }
  a.see-all {
    color: inherit;
    text-decoration: none;
    padding: 10px 5px;
    display: block;
    position: relative;
    margin-left: 20px;
    min-width: 70px;
    text-align: center;
  }

  a.see-all:not(.selected) {
    opacity: 0.7;
  }

  a.see-all::before {
    content: "";
    position: absolute;
    transition: transform 0.3s ease;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2px;
    background: var(--text-secondary);
    transform: scaleX(0);
  }

  a.see-all:hover::before,
  .selected::before {
    transform: scaleX(1);
  }
</style>
